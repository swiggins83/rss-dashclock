<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_cat_title" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="prefSendReport"
            android:summary="@string/pref_send_report_summary"
            android:title="@string/pref_check_title" >
        </CheckBoxPreference>
    </PreferenceCategory>

    <ListPreference
        android:key="prefSyncFrequency"
        android:summary="@string/pref_sync_summary"
        android:entries="@array/sync_frequency"
        android:entryValues="@array/sync_frequency_values"
        android:title="@string/pref_sync_title" >
    </ListPreference>

    <EditTextPreference
        android:key="pref_name"
        android:title="@string/pref_name_title"
        android:defaultValue="@string/pref_name_default"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" >
    </EditTextPreference>

</PreferenceScreen>
